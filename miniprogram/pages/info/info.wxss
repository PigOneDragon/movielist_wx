.box{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: .4;
}
.mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;

}
.movie{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  padding: 20rpx; 
}

.img{
  width: 280rpx;
  height: 90%; 
  margin-right: 24rpx;
  
}
.txt{
  flex-grow: 1;
  line-height: 60rpx;
  color: #fff;
  font-size: 24rpx;
}
.aver{
  color: #fc0;
  font-size: 36rpx;
  font-weight: 700;
}
.desc{
  padding: 20rpx;
  color: #555;
  font-size: 24rpx;
}